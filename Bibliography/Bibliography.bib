	keywords = {bias, case-control, contaminated control, exponential model, habitat modeling, log-binomial model, logistic model, resource selection function, resource selection probability function, sampling design, use-availability},
	pages = {774--789},
	file = {Full Text PDF:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/UFI4SFQX/Keating and Cherry - 2004 - Use and Interpretation of Logistic Regression in H.pdf:application/pdf;Snapshot:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/SAG6T5M5/Keating and Cherry - 2004 - Use and Interpretation of Logistic Regression in H.html:text/html}
