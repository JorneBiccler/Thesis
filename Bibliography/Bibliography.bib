	keywords = {Habitat selection, logistic regression, Model selection, Prediction, resource selection functions, RSF, Validation},
	pages = {281--300},
	file = {ScienceDirect Snapshot:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/RZVQCN22/S0304380002002004.html:text/html}
}

