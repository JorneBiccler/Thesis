	pages = {1126--1136},
	file = {Full Text PDF:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/GRCP7M2B/Gallien et al. - 2012 - Invasive species distribution models  how violati.pdf:application/pdf;Snapshot:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/ANZQ6ZNM/Gallien et al. - 2012 - Invasive species distribution models  how violati.html:text/html}
