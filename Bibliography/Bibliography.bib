	keywords = {AUC, distribution models, ecological statistics, goodness-of-fit, model accuracy, ROC curve},
	pages = {145--151},
	file = {Full Text PDF:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/XKN2SRVH/Lobo et al. - 2008 - AUC a misleading measure of the performance of pr.pdf:application/pdf;Snapshot:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/J7EPJGCA/abstract.html:text/html}
