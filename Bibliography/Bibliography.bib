	month = dec,
	year = {2014},
	pages = {1267--1281},
	file = {Full Text PDF:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/FU5H3BDJ/Merow et al. - 2014 - What do we gain from simplicity versus complexity .pdf:application/pdf;Snapshot:/home/jorne/.zotero/zotero/k1od4wal.default/zotero/storage/SMZ7MF8G/abstract.html:text/html}
